<!DOCTYPE html>
<html>
<head>
<meta charset='utf-8'>
<title><%= @name %></title>
<link href='<%= @urlroot %>/stylesheets/gyazz.css' rel='stylesheet' type='text/css; charset=utf-8'>
<script language="JavaScript" src='<%= @urlroot %>/javascripts/jquery.js'></script>
<script type="text/javascript">
var name = "<%= @name %>";

function setchange(id){
  $('#'+id).change(function(){
    $.ajax({
      async: true,
      url: "/__setattr/" + name + "/" + id + "/" + $('#'+id).attr('checked')
    });
  })
}

$(document).ready(function(){
  setchange('searchable');
  setchange('sortbydate');
})
</script>
</head>

<body>
<div class='title'>
  <span class='wordtitle'><%= @name %> 設定</span>
  <form action="<%= @urlroot %>/__search/<%= @name %>" method="get" style="float:right;font-size:12pt;">
    <input height='20' name='q' type='text' value='<%= @q %>'>
    <input type='submit' value='検索'>
  </form>
</div>

<p>
<input <%= @searchable %> type='checkbox' id='searchable'>検索エンジンのクロールを許可する<p>
<input <%= @sortbydate %> type='checkbox' id='sortbydate'>新しい順にリストする<p>

</body>
</html>
